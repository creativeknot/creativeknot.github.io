---
import AppDarkMode from "./AppDarkMode"

const path = Astro.canonicalURL.pathname;
let links = [];

if (path !== '/') {
  links.push({
    href: "/",
    name: "Home",
  });
} else {
  links.push({
    href: "/posts",
    name: "Posts",
  });
}

links.push({
  href: "https://github.com/creativenull",
  name: "Github",
});
---

<div class="app-header text-light-50 bg-blue-900 h-20 w-full flex items-center justify-between">
  <nav>
    {links.map((link) => (
      <a class="text-xl font-bold px-4 py-6 transition-all duration-300 hover:(bg-light-50 text-dark-700)" href={link.href}>
        {link.name}
      </a>
    ))}
  </nav>

  <div class="pr-4">
    <AppDarkMode client:load />
  </div>
</div>
